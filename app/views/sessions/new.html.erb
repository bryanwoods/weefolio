
	<% form_tag session_path do %>
		<fieldset>
			<h2>Login</h2>
			<dl>
			    <dt>
			      <label for="login">Username</label>
			    </dt>
			    <dd>
			      <%= text_field_tag 'login', @login, :size => 30 %>
			    </dd>
			
			    <dt>
			      <label for="password">Password</label>
			    </dt>
			    <dd>
			      <%= password_field_tag 'password', nil, :size => 30 %>
			    </dd>
			    
			    <dt>&nbsp;</dt>
			    <dd><a href="#">Forgot your password?</a></dd>
    		</dl>
    	</fieldset>
    	
    	<div class="submit">
    	  <%= submit_tag 'Login' %>
    	</div>
  <% end %>





