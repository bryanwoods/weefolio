<html>
	<head>
		<title><%= @page_title %></title>
		<% if @design.design_type == 1 %>
		  <%= render :partial => 'styles/form_css' %>
		  <%= stylesheet_link_tag 'editable.css'%>
		<% else %>
		  <%= render :partial => 'styles/text_css' %>
		<% end %>
		
		<%= stylesheet_link_tag 'un-editable.css'%>
		<%= javascript_include_tag ['jquery-1.3.1.min.js', 'wee.js'] %>
	</head>
	
	<body class="">
	  <%= render :partial => 'shared/header_image' %>
		
		<div id="tagline-wrap">
			<div id="tagline-container">
    			<%= render_tag_line(@user)%>
			</div>
		</div>
		
		<div id="portfolio-wrap">
			<div id="portfolio-container">
				<%= yield %>
			</div>
		</div>
		  
		<div id="info-wrap">  
			<div id="info-container">
			  <%= show_about_me_for(@user) %>
				
				<%= show_contact_form_for(@user) %>
			</div>
		</div>
		
		<p>
		  <%= show_rss_for(@user) %>
		</p>
		
		<% if @user.account_tier == 1 %>
			<a id="weefolio-badge" href="#">Weefolio</a>
		<% end %>
	</body>
</html>