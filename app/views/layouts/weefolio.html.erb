<html>
	<head>
		<title><%= @page_title %></title>
		<% if @design.design_type == 1 %>
		  <%= render :partial => 'styles/form_css' %>
		  <%= stylesheet_link_tag 'editable.css'%>
		<% else %>
		  <%= render :partial => 'styles/text_css' %>
		<% end %>
		
		<%= stylesheet_link_tag 'un-editable.css'%>
		<%= javascript_include_tag ['jquery-1.3.1.min.js', 'wee.js'] %>
	</head>
	
	<body class="">
		<% if @design.header_image.size.blank? %>
			<div id="header-wrap">
				<div id="header-container">		
					<div id="no-header">
						<p><strong><%= @user.login %></strong> hasn't added a header image yet.</p>
					</div>
				</div>
			</div>
		<% else %>
		  <div id="header-wrap">
  			<div id="header-container">		
  				<%= image_tag @design.header_image.url(:header_format) %>
  			</div>
  		</div>
  	<% end %>
		
		<div id="tagline-wrap">
			<div id="tagline-container">
    			<%= render_tag_line(@user)%>
			</div>
		</div>
		
		<div id="portfolio-wrap">
			<div id="portfolio-container">
				<%= yield %>
			</div>
		</div>
		  
		<div id="info-wrap">  
			<div id="info-container">
				<div id="about-container">
					<h2>About <!--<%=h @user.login %>--></h2>
					<% if @user.about_me.blank? %>
					  <p>
  					  <strong><%= @user.login %></strong> hasn't added any information yet.
  					</p>
					<% else %>
					  <p>
  					  <%=h @user.about_me%>
  					</p>
				  <% end %>
				</div>
				
				<div id="contact-container">
				  <%= flash[:notice] %>
					<h2>Contact <!--<%=h @user.login %>--></h2>
					
					<%= form_tag :controller => 'portfolios', :action => 'send_message', :id => @user, :html => { :method => :post } %>
					  <fieldset>
							<label for="name">Name</label>
							<%= text_field_tag :name %>
						</fieldset>
						
						<fieldset>
							<label for="email">Email</label>
							<%= text_field_tag :from %>
						</fieldset>
						
						<fieldset>
							<label for="message">Message</label>
							<textarea id="message" name="message" rows="7"></textarea>
						</fieldset>
						
						<div id="contact-submit">
							<%= submit_tag 'Send Message' %>
						</div>
					</form>
				</div>
			</div>
		</div>
		
		<% if @user.account_tier == 1 %>
			<a id="weefolio-badge" href="#">Weefolio</a>
		<% end %>
	</body>
</html>