<!--PAGE CONTENT-->
<%# YIELD %>
<div id="content-container">
   
    <% if flash[:warning] or flash[:notice] %>
  		<div id="notice" <% if flash[:warning] %>class="warning"<% end %>>
    <%= flash[:warning] || flash[:notice] %>
  		</div>
	<% end %>
	
	<!--DUMP ALL OF YOUR SHIT HERE!-->
	<% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  
  <% form_for(User.new) do |f| %>
  	
    <fieldset>
    	<h2>Sign up for <strong><em>free</em></strong> &amp; upgrade anytime!</h2>
	    <dl>
	    	<dt>
	    		<%= f.label :login, 'Username' %>
	    	</dt>
	    	<dd>
	      		<%= f.text_field :login %>
	      		<p>This is how we and others in the Weefolio community will address you.</p>
	      	</dt>
	      
	      	<dt>
	      		<label for="user_email">Email</label>
	      	</dt>
	    	<dd>
	      		<%= f.text_field :email %>
	      		<p>This is where we'll send information regarding you account.</p>
	      	</dt>
	      
	      	<dt>
	      		<%= f.label :password, "Password" %>
	      	</dt>
	    	<dd>
	      		<%= f.password_field :password %>
	      	</dt>
	      
	      	<dt>
	      		<%= f.label :password_confirmation, "Confirm Password" %>
	      	</dt>
	    	<dd>
	      		<%= f.password_field :password_confirmation %>
	      	</dt>
	      	
	      	<dt>
	      	</dt>
	      	<dd>
	      		<%= f.check_box :has_read_terms %>
		      	<%= f.label :has_read_terms, 'I have read and agree with the <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.' %>
	      	</dd>
	    </dl>    
    </fieldset>
    
    <div class="submit">
      <%= f.submit 'Sign Up' %>
    </div>
  <% end %>
</div>


