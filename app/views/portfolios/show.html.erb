<% if @user.design.layout_type == 1 %>
  <ul id="portfolio-grid">
    <% for piece in @user.portfolio.pieces %>
      <li><%= link_to image_tag(piece.image_1.url(:large_thumb)), portfolio_piece_path(@user.portfolio, piece), :title => piece.title %></li>
	  <% end %>
  </ul>
<% else %>
    <%= render :partial => 'pieces/list' %>
    <hr/>
<% end %>


